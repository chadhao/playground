import java.util.Random;
import java.util.Scanner;

public class Draw
{
	private static int num_of_drawer;
	private static int num_of_options;
	private static Scanner keyboard;
	
	static
	{
		num_of_options = 0;
		num_of_drawer = 0;
		keyboard = new Scanner(System.in);
	}
	
	public static void main(String[] args)
	{
		System.out.print("How many people: ");
		num_of_drawer = keyboard.nextInt();
		
		People people = new People(num_of_drawer);
		for (int i = 0; i < people.get_num_of_people(); i++)
		{
			System.out.print("Name " + (i+1) + ": ");
			people.set_name(i, keyboard.nextLine());
		}
		
		System.out.println("\nHow many options: ");
		num_of_options = keyboard.nextInt();
		
		Options options = new Options(num_of_options);
		for (int i = 0; i < options.get_num_of_options(); i++)
		{
			System.out.print("Option " + (i+1) + ": ");
			options.set_option(i, keyboard.nextLine());
		}
	}
	
	private void random_draw(People people, Options options)
	{
		Random random = new Random();
		
	}

}
